<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton
        style="@style/tool"
        android:src="@drawable/menu"
        android:id="@+id/menuButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <com.zh.young.codeEditor.views.RedoImageButton
        android:id="@+id/redoButton"
        android:layout_alignParentEnd="true"
        style="@style/tool"
        android:src="@drawable/redo"/>
    <com.zh.young.codeEditor.views.UndoImageButton
        android:id="@+id/undoButton"
        style="@style/tool"
        android:layout_toStartOf="@id/redoButton"
        android:src="@drawable/undo"/>
    <com.zh.young.codeEditor.views.EditImageButton
        android:id="@+id/editButton"
        style="@style/tool"
        android:layout_toStartOf="@id/undoButton"
        android:src="@drawable/writable"/>
    <com.zh.young.codeEditor.views.SaveImageButton
        android:id="@+id/saveButton"
        style="@style/tool"
        android:layout_toStartOf="@id/editButton"
        android:src="@drawable/save"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/menuBar"
        android:layout_toStartOf="@id/saveButton"
        android:text="文件名"
        android:textSize="18sp"
        android:gravity="center"
        />
</RelativeLayout>